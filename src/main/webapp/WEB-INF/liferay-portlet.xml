<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC
        "-//Liferay//DTD Portlet Application 6.2.0//EN"
        "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
    <portlet>
        <portlet-name>RCSSlider</portlet-name>
        <configuration-action-class>com.rcs.portlet.slider.action.ConfigurationActionImpl</configuration-action-class>
        <instanceable>true</instanceable>
        <header-portlet-css>/css/main.css</header-portlet-css>
        <header-portlet-javascript>/js/jquery-1.7.1.min.js</header-portlet-javascript>
        <header-portlet-javascript>/js/jquery.carouFredSel-6.2.1-packed.js</header-portlet-javascript>
        <header-portlet-javascript>/js/jquery.touchSwipe.min.js</header-portlet-javascript>
        <css-class-wrapper>rotterdam-slider-portlet</css-class-wrapper>
    </portlet>
    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>guest</role-name>
        <role-link>Guest</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>
</liferay-portlet-app>
